@model AssessmentRelations.Models.Client
@using AssessmentRelations.Models

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Projects)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Projects.Count)
        </dd>

    </dl>
    @{int i = 0;}
    @foreach (Project p in Model.Projects)
    {
        <dl class="dl-horizontal">
            <dt>
                Project @(i++)
            </dt>

            <dd>
                @p.Name
            </dd>
        </dl>
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
